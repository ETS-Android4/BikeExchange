<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="6dp"
    android:id="@+id/discounted_item_fragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageButton
            android:id="@+id/dsc_item_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/close"
            android:padding="15dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_gravity="end"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            >

            <ImageView
                android:id="@+id/discounted_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/imageUrl"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/discounted_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/discounted_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textAlignment="gravity"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/common_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/discounted_common_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@string/discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textStyle="italic"
                android:textSize="16sp"
                android:textColor="@color/teal_700"
                />

            <TextView
                android:id="@+id/discounted_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/go_to_shopping_cart_img_btn"
                android:src="@drawable/shop_cart_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="end"
                android:layout_marginEnd="25dp"
                android:contentDescription="@string/go_to_shopping_cart"
                />

            <Button
                android:id="@+id/dsc_add_to_cart"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="@string/add_to_cart"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/buy_now_button"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="@string/buy_now"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/add_to_saved_button"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="@string/add_to_saved"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
